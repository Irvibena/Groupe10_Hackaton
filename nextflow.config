
docker {
enabled = true
}
report {
enabled = true
file = 'reports/report.html'
}

trace {

enabled = true
file = 'reports/trace.txt'
}

timeline {
enabled = true
file = 'reports/timeline.html'
}

dag {
enabled = true
file = 'reports/dag.dot'
}

process {

	withName: DownloadFastqFiles {
		container = "evolbioinfo/sratoolkit:v2.5.7"
		cpus = 16
		memory = 62.GB
		}

	withName: indexGen {
		container = "evolbioinfo/star:v2.7.6a"
		cpus = 16
		memory = 62.GB
		}

	withName: mapping_Fastq {
		container = "evolbioinfo/star:v2.7.6a"
		cpus = 16
		memory = 64.GB
		}

	withName: indexBam {
		container = "evolbioinfo/samtools:v1.11"
		cpus = 16
		memory = 62.GB
		}

	withName: getCountReads_feature {
		container = "evolbioinfo/subread:v2.0.1"
		cpus = 16
		memory = 62.GB
		}
	}
